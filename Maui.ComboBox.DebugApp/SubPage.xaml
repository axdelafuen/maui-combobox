<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:Maui.ComboBox;assembly=Maui.ComboBox.Lib"
             xmlns:local="clr-namespace:Maui.ComboBox.DebugApp"
             x:DataType="local:SubPage"
             x:Class="Maui.ComboBox.DebugApp.SubPage"
             Title="SubPage">
    <Grid RowDefinitions="*,Auto">
        <ScrollView>
            <VerticalStackLayout>
                <Label
                    Text="A sub page!"
                    Style="{StaticResource Headline}"
                    SemanticProperties.HeadingLevel="Level1"/>

                <controls:ComboBox
                    DropdownCornerRadius="5"
                    TextSize="15"
                    TextColor="Black"
                    DropdownTextColor="Black"
                    DropdownBorderWidth="0"
                    DropdownShadow="False"
                    Placeholder="Select item"
                    ItemsSource="{Binding ObjectItems}" 
                    SelectedItem="{Binding SelectedObjectItem}"/>

                <Label
                    Text="Fill some space for scroll placement test!"
                    Style="{StaticResource Headline}"
                    SemanticProperties.HeadingLevel="Level1"/>

                <Label
                    Text="Fill some space for scroll placement test!"
                    Style="{StaticResource Headline}"
                    SemanticProperties.HeadingLevel="Level1"/>

                <Label
                    Text="Fill some space for scroll placement test!"
                    Style="{StaticResource Headline}"
                    SemanticProperties.HeadingLevel="Level1"/>

                <Label
                    Text="Fill some space for scroll placement test!"
                    Style="{StaticResource Headline}"
                    SemanticProperties.HeadingLevel="Level1"/>

                <Label
                    Text="Fill some space for scroll placement test!"
                    Style="{StaticResource Headline}"
                    SemanticProperties.HeadingLevel="Level1"/>

                <controls:ComboBox
                    DropdownCornerRadius="5"
                    TextSize="15"
                    TextColor="Black"
                    DropdownTextColor="Black"
                    DropdownBorderWidth="0"
                    DropdownShadow="False"
                    Placeholder="Select item"
                    ItemsSource="{Binding ObjectItems}" 
                    SelectedItem="{Binding SelectedObjectItem}"/>

                <Label
                    Text="Fill some space for scroll placement test!"
                    Style="{StaticResource Headline}"
                    SemanticProperties.HeadingLevel="Level1"/>

                <Label
                    Text="Fill some space for scroll placement test!"
                    Style="{StaticResource Headline}"
                    SemanticProperties.HeadingLevel="Level1"/>
            </VerticalStackLayout>
        </ScrollView>
        <VerticalStackLayout
            Grid.Row="1">
            <Button
            Text="TEST BUTTON"
            Margin="25,0,25,15"
            AbsoluteLayout.LayoutBounds="0.5,0.5,-1,-1"
            AbsoluteLayout.LayoutFlags="PositionProportional"
         /></VerticalStackLayout>
    </Grid>
</ContentPage>