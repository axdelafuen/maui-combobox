<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Maui.ComboBox.DebugApp"
             xmlns:controls="clr-namespace:Maui.ComboBox;assembly=Maui.ComboBox.Lib"
             x:DataType="local:MainPage"
             x:Class="Maui.ComboBox.DebugApp.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="50,0"
            Spacing="25">

            <Label
                Text="ComboBox Controls Test!"
                Style="{StaticResource SubHeadline}"/>

            <Label Text="PopupComboBox"/>
                <controls:PopupComboBox
                        DropdownCornerRadius="5"
                        TextSize="15"
                        DropdownBackgroundColor="LightGray"
                        BackgroundColor="LightGray"
                        DropdownShadow="False"
                        Placeholder="Select item"
                        DropdownImageTint="Gray"
                        ItemsSource="{Binding ObjectItems}" 
                        SelectedItem="{Binding SelectedObjectItem}"/>

            <Label Text="CanvaComboBox"/>
            <controls:CanvaComboBox
                ItemsSource="{Binding ObjectItems}" 
                SelectedItem="{Binding SelectedObjectItem}"
                DropDownBackgroundColor="White"/>

            <Label Text="GridComboBox"/>
            <controls:Dropdown
                Items="{Binding ObjectItems}"/>
            
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>