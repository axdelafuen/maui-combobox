<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:Maui.ComboBox;assembly=Maui.ComboBox.Lib"
            xmlns:local="clr-namespace:Maui.ComboBox.DebugApp.SamplePages"
            x:Class="Maui.ComboBox.DebugApp.SamplePages.CanvaComboBoxSamplePage"
            x:DataType="local:CanvaComboBoxSamplePage"
             Title="CanvaComboBox">
    <VerticalStackLayout>

        <controls:CanvaComboBox
                ItemsSource="{Binding ObjectItems}" 
                SelectedItem="{Binding SelectedObjectItem}"
                DropDownBackgroundColor="White"/>
        
    </VerticalStackLayout>
</ContentPage>